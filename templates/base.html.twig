<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Awesome Movies!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Oxygen:300,400,700|Roboto:300,400,700" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% endblock %}
    </head>
    <body>
        <div class="nav-container">
            <ul class="nav">
                <li class="nav-element"><a href="{{ path('home') }}">Home</a></li>
                <li class="nav-element"><a href="{{ path('reservation') }}">Reservations</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-element"><a href="{{ path('app_logout') }}">LogOut</a></li>
                 {% else %}
                     <li class="nav-element"><a href="{{ path('app_login') }}">LogIn</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="header-container">
            <div class="header-text">
                <h1 class="header-title">Awesome Movies!</h1>
                <strong class="header-baseline">The best place to find the best movies</strong>
            </div>
            <span class="header-cover"></span>
        </div>
        <div class="wrapper">
            {% block body %}{% endblock %}
        </div>
        {% for message in app.flashes('notice') %}
            <div class="alert">
                {{ message }}
            </div>
        {% endfor %}
        <div class="footer-container">
            <p>Awesome Movies</p>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
